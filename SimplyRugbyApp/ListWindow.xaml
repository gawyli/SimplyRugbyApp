        <Button x:Name="Btn_back" Content="Back" HorizontalAlignment="Left" Height="50" Margin="252,350,0,0" VerticalAlignment="Top" Width="100" Click="Btn_back_Click"/>
        <Button x:Name="Btn_universal_two" Content="" HorizontalAlignment="Left" Height="50" Margin="142,350,0,0" VerticalAlignment="Top" Width="100" Click="Btn_universal_two_Click"/>

    </Grid>
</Window>
